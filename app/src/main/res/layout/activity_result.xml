<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semi_transparent"

    tools:context=".activities.ResultActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_top"
        android:layout_width="wrap_content"
        android:layout_height="65dp"

        android:text="This is your outfit!"

        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>




<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    >

    <ImageView
        android:id="@+id/hat"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:src="@drawable/hat" />

    <TextView
        android:id="@+id/addSign1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="15dp"
        android:text="+"
        android:textSize="35dp" />

</RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            >

            <ImageView
                android:id="@+id/jacket"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/blue_jacket" />

            <TextView
                android:id="@+id/addSign2"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="37dp"
                android:text="+"
                android:textSize="35dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            >

            <ImageView
                android:id="@+id/jeans"
                android:layout_width="115dp"
                android:layout_height="116dp"
                android:src="@drawable/pants2" />

            <TextView
                android:id="@+id/addSign3"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="96dp"
                android:layout_marginLeft="47dp"
                android:text="+"
                android:textSize="35dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/boots"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/boots" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/message_bottom"
            android:layout_width="368dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="There is a high chance of precipitation, don't forget to take an umbrella with you!"
            android:layout_below="@id/boots"
            android:layout_marginStart="10dp"

            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />


        </LinearLayout>



        <TextView
            android:id="@+id/message_bottom2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Have a wonderful day!"
            android:layout_marginStart="10dp"

            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

    </LinearLayout>


</LinearLayout>